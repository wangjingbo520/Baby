<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".ui.activity.SettingActivity">

    <LinearLayout
        android:id="@+id/llPerson"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:layout_marginTop="@dimen/x10"
        android:background="@drawable/common_click"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="个人资料"
            android:textColor="@color/textColor3"
            android:textSize="@dimen/textSize_32" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAdress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:layout_below="@id/llPerson"
        android:layout_marginTop="@dimen/x2"
        android:background="@drawable/common_click"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="收货地址"
            android:textColor="@color/textColor3"
            android:textSize="@dimen/textSize_32" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_right" />
    </LinearLayout>

    <TextView
        android:id="@+id/exLogin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/x20"
        android:layout_marginTop="@dimen/x250"
        android:background="@drawable/bg_btn_login"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="@dimen/x32" />

</RelativeLayout>