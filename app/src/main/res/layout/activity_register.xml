            <!--android:textColor="@color/textColor3"-->
            <!--android:textSize="@dimen/textSize_32"-->
            <!--android:visibility="invisible" />-->
            <!--</LinearLayout>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x2"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/x30"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x30"
            android:paddingTop="@dimen/x30">

            <ImageView
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/x40"
                android:src="@mipmap/xxdz" />

            <EditText
                android:id="@+id/etDetailAdress"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x24"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入您的详细地址"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/textColor3"
                android:textColorHint="@color/textColor9"
                android:textSize="@dimen/x32" />

        </LinearLayout>

        <TextView
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x90"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/x50"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/x50"
            android:background="@drawable/bg_btn_login"
            android:gravity="center"
            android:text="加入会员"
            android:textColor="@color/white"
            android:textSize="@dimen/x32" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>