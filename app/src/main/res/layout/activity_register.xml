<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.RegisterActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/x50"
        android:text="欢迎来到向阳宝贝"
        android:textColor="#363636"
        android:textSize="@dimen/x50" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:layout_marginTop="@dimen/x50"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30">

        <ImageView
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x40"
            android:src="@mipmap/phone" />

        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x24"
            android:background="@null"
            android:hint="请填写本人手机号"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:maxLength="11"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/textColor3"
            android:textColorHint="@color/textColor9"
            android:textSize="@dimen/x32" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:layout_marginTop="@dimen/x2"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30">

        <ImageView
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x40"
            android:src="@mipmap/yan" />

        <EditText
            android:id="@+id/etCode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginRight="@dimen/x20"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请填写密码"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLength="15"
            android:singleLine="true"
            android:textColor="@color/textColor3"
            android:textColorHint="@color/textColor9"
            android:textSize="@dimen/x32" />

        <TextView
            android:id="@+id/tvGetCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_login"
            android:gravity="center"
            android:padding="@dimen/x15"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/x28" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:layout_marginTop="@dimen/x2"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30">

        <ImageView
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x40"
            android:src="@mipmap/suo" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x24"
            android:layout_weight="1"
            android:background="@null"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="6-20位数字和字母组合的密码"
            android:imeOptions="actionNext"
            android:inputType="numberPassword"
            android:maxLength="15"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/textColor3"
            android:textColorHint="@color/textColor9"
            android:textSize="@dimen/x32" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:layout_marginTop="@dimen/x2"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30">

        <ImageView
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x40"
            android:src="@mipmap/suog" />

        <EditText
            android:id="@+id/etSurePassword"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x24"
            android:layout_weight="1"
            android:background="@null"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="6-15位数字或字母"
            android:imeOptions="actionNext"
            android:inputType="numberPassword"
            android:maxLength="15"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/textColor3"
            android:textColorHint="@color/textColor9"
            android:textSize="@dimen/x32" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:layout_marginTop="@dimen/x2"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30">

        <ImageView
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x40"
            android:src="@mipmap/hzxm" />

        <EditText
            android:id="@+id/etChildName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x24"
            android:layout_weight="1"
            android:background="@null"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="请输入您的孩子姓名"
            android:imeOptions="actionNext"
            android:inputType="numberPassword"
            android:maxLength="15"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/textColor3"
            android:textColorHint="@color/textColor9"
            android:textSize="@dimen/x32" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:layout_marginTop="@dimen/x2"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30">

        <TextView
            android:layout_width="@dimen/x200"
            android:layout_height="wrap_content"
            android:text="所属幼儿园 :"
            android:textColor="@color/textColor3"
            android:textSize="@dimen/x35" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:layout_marginTop="@dimen/x2"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30">

        <ImageView
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x40"
            android:src="@mipmap/xxdz" />

        <EditText
            android:id="@+id/etDetailAdress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x24"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入您的详细地址"
            android:imeOptions="actionNext"
            android:inputType="numberPassword"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/textColor3"
            android:textColorHint="@color/textColor9"
            android:textSize="@dimen/x32" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x90"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:background="@drawable/bg_btn_login"
            android:gravity="center"
            android:text="加入会员"
            android:textColor="@color/white"
            android:textSize="@dimen/x32" />

    </RelativeLayout>


