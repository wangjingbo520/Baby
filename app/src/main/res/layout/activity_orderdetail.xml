<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.OrderdetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/x20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单状态:"
            android:textColor="@color/textColor3"
            android:textSize="@dimen/textSize_32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:text="待收货"
            android:textColor="@color/textColor3"
            android:textSize="@dimen/textSize_32" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/line" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x10"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:paddingTop="@dimen/x10">

        <TextView
            android:layout_width="@dimen/x200"
            android:layout_height="wrap_content"
            android:text="订单金额:"
            android:textColor="@color/textColor3"
            android:textSize="@dimen/textSize_32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:text="$300"
            android:textColor="@color/textColor3"
            android:textSize="@dimen/textSize_32" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x10"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:paddingTop="@dimen/x10">

        <TextView
            android:layout_width="@dimen/x200"
            android:layout_height="wrap_content"
            android:text="收货人:"
            android:textColor="@color/textColor3"
            android:textSize="@dimen/textSize_32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:text="$300"
            android:textColor="@color/textColor3"
            android:textSize="@dimen/textSize_32" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x10"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:paddingTop="@dimen/x10">

        <TextView
            android:layout_width="@dimen/x200"
            android:layout_height="wrap_content"
            android:text="联系电话:"
            android:textColor="@color/textColor3"
            android:textSize="@dimen/textSize_32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:text="$300"
            android:textColor="@color/textColor3"
            android:textSize="@dimen/textSize_32" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x10"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:paddingTop="@dimen/x10">

        <TextView
            android:layout_width="@dimen/x200"
            android:layout_height="wrap_content"
            android:text="收获地址:"
            android:textColor="@color/textColor3"
            android:textSize="@dimen/textSize_32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:text="$300"
            android:textColor="@color/textColor3"
            android:textSize="@dimen/textSize_32" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x20"
        android:paddingLeft="@dimen/x30"
        android:paddingTop="@dimen/x20">

        <ImageView
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/x220"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="钢铁是怎样炼成的"
                android:textColor="@color/textColor3"
                android:textSize="@dimen/textSize_32" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="订单号：11111"
                android:textColor="@color/textColor6"
                android:textSize="@dimen/textSize_32" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/x20"
            android:gravity="bottom"
            android:text="x1"
            android:textSize="@dimen/textSize_30" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x10"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:paddingTop="@dimen/x10">

        <TextView
            android:layout_width="@dimen/x200"
            android:layout_height="wrap_content"
            android:text="配送员姓名:"
            android:textColor="@color/textColor3"
            android:textSize="@dimen/textSize_32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:text="蜀中小金花"
            android:textColor="@color/textColor3"
            android:textSize="@dimen/textSize_32" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x10"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:paddingTop="@dimen/x10">

        <TextView
            android:layout_width="@dimen/x200"
            android:layout_height="wrap_content"
            android:text="联系电话:"
            android:textColor="@color/textColor3"
            android:textSize="@dimen/textSize_32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:text="15545545454"
            android:textColor="@color/textColor3"
            android:textSize="@dimen/textSize_32" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x10"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:paddingTop="@dimen/x10">

        <TextView
            android:layout_width="@dimen/x200"
            android:layout_height="wrap_content"
            android:text="付款时间:"
            android:textColor="@color/textColor3"
            android:textSize="@dimen/textSize_32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:text="2018-06-07  11:10:00"
            android:textColor="@color/textColor3"
            android:textSize="@dimen/textSize_32" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x20">


        <TextView
            android:id="@+id/tvLianxi"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/x90"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_btn_login"
            android:gravity="center"
            android:text="确认收获"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_32" />

        <TextView
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/x90"
            android:layout_marginRight="@dimen/x30"
            android:layout_toLeftOf="@id/tvLianxi"
            android:background="@drawable/bg_btn_login"
            android:gravity="center"
            android:text="联系配送员"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_32" />

    </RelativeLayout>


</LinearLayout>