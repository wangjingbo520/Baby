<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/x1"
    tools:context=".ui.activity.JoinmemberActivity2">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/x20"
                android:text="会员类型"
                android:textColor="@color/textColor3"
                android:textSize="@dimen/textSize_32" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@color/line" />

            <com.sunbaby.app.common.widget.floawlayout.TagFlowLayout
                android:id="@+id/tag1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/x20"
                app:max_select="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/x20"
                android:text="时间"
                android:textColor="@color/textColor3"
                android:textSize="@dimen/textSize_32" />


            <com.sunbaby.app.common.widget.floawlayout.TagFlowLayout
                android:id="@+id/tag2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/x20"
                app:max_select="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:text="当前有效期："
                    android:textColor="@color/textColor3"
                    android:textSize="@dimen/x32" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_marginTop="@dimen/x10"
                    android:text=""
                    android:textColor="@color/textColor3"
                    android:textSize="@dimen/x32" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_marginTop="@dimen/x10"
                    android:text="金额："
                    android:textColor="@color/textColor3"
                    android:textSize="@dimen/x32" />

                <TextView
                    android:id="@+id/tvJine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_marginTop="@dimen/x10"
                    android:text=""
                    android:textColor="@color/textColor3"
                    android:textSize="@dimen/x32" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/x20"
                android:paddingBottom="@dimen/x10"
                android:text="权益：会员期间可免费租赁图书，并最多持有5本图书，开通后一个星期内可以无理由退款"
                android:textColor="#f23232"
                android:textSize="@dimen/x30" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x20"
                android:gravity="center"
                android:text="当前会员开通日期未到一周，可申请无理由全额退款"
                android:textColor="@color/textColor6"
                android:textSize="@dimen/textSize_30" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnTuikuan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x92"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginRight="@dimen/x40"
            android:background="@drawable/bg_textview_guihaung"
            android:text="申请退款"
            android:textColor="@color/themeColor"
            android:textSize="@dimen/x32" />

        <Button
            android:id="@+id/btnKaitong"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x92"
            android:layout_above="@id/btnTuikuan"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginRight="@dimen/x40"
            android:background="@drawable/bg_btn_login"
            android:text="立即续费"
            android:textColor="@color/white"
            android:textSize="@dimen/x32" />

    </LinearLayout>

</LinearLayout>





